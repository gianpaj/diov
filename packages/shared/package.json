{
  "name": "@battle-circles/shared",
  "version": "0.1.0",
  "description": "Shared Zod schemas, generated types, and event constants for Battle Circles",
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./events": {
      "import": "./src/events.ts",
      "types": "./src/events.ts"
    },
    "./schema": {
      "import": "./src/schema.ts",
      "types": "./src/schema.ts"
    },
    "./validators": {
      "import": "./src/validators.ts",
      "types": "./src/validators.ts"
    }
  },
  "scripts": {
    "codegen": "tsx scripts/codegen.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}
