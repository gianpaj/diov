{
  "name": "battle-circles",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "A multiplayer 2D webapp game where players compete to eat each other",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "type-check:all": "pnpm --filter @battle-circles/shared type-check && pnpm type-check && pnpm --filter backend type-check",
    "codegen": "pnpm --filter @battle-circles/shared codegen",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "prepare": "husky install"
  },
  "dependencies": {
    "@pixi/react": "^8.0.5",
    "@tailwindcss/vite": "^4.2.1",
    "clsx": "^2.0.0",
    "lucide-react": "^0.294.0",
    "pixi.js": "^8.16.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.20.1",
    "socket.io-client": "^4.7.2",
    "tailwindcss": "^4.2.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.4",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/ui": "^0.34.6",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "typescript": "^5.2.2",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^0.17.4",
    "vitest": "^0.34.6"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
